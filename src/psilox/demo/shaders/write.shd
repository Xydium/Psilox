VERTEX:

#version 120

void main() {
	gl_Position = projection_transform * gl_Vertex;
}

FRAGMENT:

#version 120
#extension GL_EXT_gpu_shader4 : enable

uniform float time;

void main() {
	int x = int(gl_FragCoord.x + time);
	int y = int(gl_FragCoord.y + time);
	int r = ((x % (y + 1))) & 0xFF;
	int g = ((y % (x + 1))) & 0xFF;
	int b = (((x * y) % ((y * x) + 1))) & 0xFF;
	gl_FragColor = vec4(r / 255.0, g / 255.0, b / 255.0, 1.0);
}